<div class="col-md-12">
  <div class="cold-md-6">
    <h2>
      <%= @question.title %>
    </h2>
    <p>
      asked <%= time_ago_in_words(@question.created_at) %> ago <%= link_to @question.user.name, user_path(@question.user) %>
    </p>
  </div>
</div>

<div class="col-md-12">
  <div class="cold-md-6 panel panel-default">
    <div class="panel-heading">
      <%= @question.created_at %>
    </div>
    <div class="panel-body">
      <p class="lead">
        <%= @question.body %>
      </p>
    </div>
    <% if current_user == @question.user %>
      <div class="panel-footer">
        <%= link_to "Edit", edit_question_path(@question), class: 'btn btn-default' %>
        <%= link_to "Delete", question_path(@question), class: 'btn btn-danger' , data: {confirm: "Are you sure?", method: "delete"} %>
      </div>
    <% end %>
  </div>
</div>
